<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cursoandroid.youflix">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".navigationBar.BottomNavigationActivity" />
        <activity android:name=".navigationBar.listVideos.activity.PlayerActivity" />
        <activity android:name=".navigationBar.listVideos.activity.MainActivity" />
        <activity
            android:name=".Login.LoginActivity"
            android:theme="@style/AppCompat.TelaCheia" />
        <activity
            android:name=".SplashScreen.SplashScreenActivity"
            android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>